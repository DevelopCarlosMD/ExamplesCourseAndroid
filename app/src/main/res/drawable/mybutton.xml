<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#FF1744"/>
            <gradient android:angle="-90" android:startColor="#FF8A80" android:endColor="#D50000"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#FF8A80"/>
            <solid android:color="#D50000"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#E0E0E0"/>
            <gradient android:angle="-90" android:startColor="#E0E0E0" android:endColor="#757575"/>
        </shape>
    </item>
</selector>